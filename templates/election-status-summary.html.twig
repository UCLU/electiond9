<div class="election__status_summary">
  {% for phase in phases %}
    <p class="election_phase election_phase__status_{{
      phase.status
      }} election_phase__eligible_{{
      phase.eligible
        ? 'eligible'
        : 'ineligible'
      }}">
      <b>{{ phase.name }}</b>:
      {{ phase.status_full }}
      {% if phase.status == 'open' %}
        {% if phase.eligible == true %}
          - <a href="{{ phase.eligibility_link }}">{{ phase.eligibility_label }}</a>
        {% endif %}
      {% endif %}

      {% if phase.status == 'open' %}
        {% if phase.eligible == true %}

        {% else %}
          <ul>
            {% for listItem in phase.ineligibility_reasons %}
              {% if listItem|length %}
                <li>‚ùå {{ listItem|trim }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}
      {% endif %}
    </p>
  {% endfor %}
</div>
